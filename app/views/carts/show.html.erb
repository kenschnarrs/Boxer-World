<!-- Ken Schnarrs -->

<div class="d-flex justify-content-center align-items-center"> 
    <h1>Ready to check out?</h1>
</div>

<div style="display: flex;">
  <div style="width: 70%;">
    <h3>Cart</h3>
    <div style="display: grid; grid-template-columns: repeat(4, 1fr); grid-gap: 10px;" >
        <% total = 0%>
        <% for cart_item in @cart.cart_items %>
            <%item = cart_item.item%>
            <div class="p-3">
                <div class="card" style="width: 8rem;">
                    <%= image_tag item.picture %>
                    <div class="card-body d-flex justify-content-center align-items-center flex-column">
                        <h5 class="card-title text-center"><%= item.name %></h5>
                        <h6><%=number_to_currency(item.price)%></h6>
                        <%total = total + item.price%>
                        <a href="" class="btn"><%= link_to 'View', item_path(item) %></a>
                    </div>
                </div>
            </div>
        <% end %>

    </div>
  </div>
  <div style="width: 30%;">
    <h3>Total: <%=number_to_currency(total)%></h3>
    <div class="card-body d-flex justify-content-center align-items-center flex-column">
      <%= link_to 'CHECKOUT', cart_checkout_path, class: 'btn btn-outline-primary btn-lg mt-5' %>
    </div>
  </div>

</div>
