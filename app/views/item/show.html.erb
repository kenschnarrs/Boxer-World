<%= stylesheet_link_tag "show" %>

<h1><%= @item.name %> | <%= @item.brand %></h1>

<div class="row">
  <div class="column">
    <%= image_tag @item.picture %>
  </div>
  <div class="column">
        <h3>Description</h3>
        <p style="font-size: 18px;"><%= @item.description %></p>
        <%= link_to 'Reviews', item_reviews_path(@item), class: 'btn btn-outline-secondary btn-lg'%>
        <%= link_to 'Add To Cart',  add_to_cart_path(@item.id), data: { "turbo-method": :post }, class: 'btn btn-outline-primary btn-lg' %>
  </div>
</div>






