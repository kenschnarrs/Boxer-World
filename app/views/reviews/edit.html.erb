<h1>Edit Review</h1>
<%= bootstrap_form_with model: @review, method: :patch, url: toedit_path(@item, @review), data: { turbo: false } do |f| %>
  <%= f.number_field :rating,in: 1.0..10.0%>
  <%= f.text_area :review_text,minlength: 30, maxlength:100, hint:"You can only use 100 characters!" %>
  <%= f.submit %>
<% end %>

<BR>
<p>
  <%= link_to "Cancel", item_reviews_path(@item), class: "btn btn-secondary"%>
</p>

 