  <!-- Calvin Gott, Dropdown menu, takes a user to settings page, and then allows them to update personal infomation-->

<head>
    <title>User Settings</title>
  
  </head>
<h1> User Settings </h1>
<h3>Hello <%=@user.name%></h3>
<strong>Change Your Account Information Here</strong> 
<%= bootstrap_form_with model: @user, url: user_path(@user), method: :patch, data: { turbo: false } do |f| %>
  <%= f.text_field :name%>
  <%= f.text_field :email %>
  <%= f.text_field :Password%>
  <%= f.text_field :phone %>
  <%= f.text_field :address%>
  <%= f.submit %>
<% end %>

<ul>
  <li> <%= link_to 'Change Billing', billing_user_path%>
</ul>

  

<p>
    <button onclick="window.location.href='http://localhost:3000/home';">
      Return Home
    </button>
</p>