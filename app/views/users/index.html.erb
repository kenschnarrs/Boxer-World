
<h1> Site Users list </h1>

<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% unless user.id == @current_user.id%>
        <tr>
          <td><%= user.last_name%>, <%= user.first_name%></td>
          <td><%= user.username%></td>
          <td><%= user.email%></td>
          <td><%= link_to "View Profile", user_path(user)%></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>



